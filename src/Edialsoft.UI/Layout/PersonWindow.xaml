<Window x:Class="Edialsoft.UI.Layout.PersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Edialsoft.UI"
        mc:Ignorable="d"
        Title="Salvar pessoa" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Border Padding="10">
        <StackPanel>
            <Grid>
                <StackPanel Margin="10">
                    <StackPanel Margin="15 0">
                        <TextBlock Text="Nome"></TextBlock>
                        <TextBox Name="firstName"></TextBox>
                    </StackPanel>
                    <StackPanel Margin="15 0">
                        <TextBlock Text="Sobrenome"></TextBlock>
                        <TextBox Name="lastName"></TextBox>
                    </StackPanel>
                    <StackPanel Margin="15 0">
                        <TextBlock Text="Telefone (99) 9 9999-9999"></TextBlock>
                        <TextBox Name="phone"></TextBox>
                    </StackPanel>

                    <Button Click="Button_Click" Margin="15">Enviar</Button>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</Window>
